<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewUbicaciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uns"
    android:padding="13dp">

    <LinearLayout
        android:id="@+id/ubicacionesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Ícono de ubicación -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_ubicacion"
            android:contentDescription="Ícono ubicaciones"
            android:layout_marginEnd="8dp" />

            <!-- Título principal -->
            <TextView
                android:id="@+id/ubicacionesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UBICACIONES"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPantoneRojo" />
        </LinearLayout>

        <!-- Aquí se añadirán las ubicaciones dinámicamente -->
        <LinearLayout
            android:id="@+id/ubicacionesListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>

